@model IEnumerable<App.Data.Entity.Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayoutcshtml.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>

</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th class="col-4"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    <img src="@item.Image" alt="@item.Image" height="40" />
                </td>
                <td class=" d-flex justify-content-between">
                    <a href="#" class="btn btn-danger col-4 ">Sil</a>|
                    <a href="#" class="btn btn-info col-4 ">Detay</a>|
                    <a href="#" class="btn btn-success col-4 ">Düzenle</a>

                </td>
            </tr>
        }
    </tbody>
</table>
